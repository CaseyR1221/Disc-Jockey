<div class="container is-fullhd is-flex is-flex-direction-row">
    
  <div class="column is-half">
    <h2 class="title">Login</h2>
    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">email:</label>
        <input class="form-input  is-medium is-rounded" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">password:</label>
        <input class="form-input  is-medium is-rounded" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <a href="/"><button class="button is-fullwidth" type="submit">login</button></a>
      </div>
    </form>
  </div>

  <div class="column is-half">
  <h2 class="title">Sign Up!</h2>
  <form class="form signup-form">
    <div class="form-group">
        <label for="name-signup">username:</label>
        <input class="form-input is-medium is-rounded" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">email:</label>
        <input class="form-input  is-medium is-rounded" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">password:</label>
        <input class="form-input  is-medium is-rounded" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <a href="/"><button class="button is-fullwidth" type="submit">signup</button></a>
      </div>
    </form>
  </div>
</div>
<script src="/js/login.js"></script>