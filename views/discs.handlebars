    <main class="section has-text-white m-5">
      <div class="mb-6">
        <h2 class="is-size-1 has-text-centered has-text-weight-bold">
          Welcome to Disc-Jockies!
        </h2>
        <p class="has-text-centered">
          Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do
          eiusmod tempor incididunt ut labore et dolore magna aliqua.
        </p>
      </div>

      <!-- This is the box to get the aside and recent reviews next to each other -->
      <!-- This is the aside to hold Favorite discs and upcoming tournaments -->
      <!-- This is the Favorite discs box -->
      <h2 class="is-size-2 has-text-centered mb-5">Discs</h2>

      <!-- This is the row tile -->
      <div class="tile is-ancestor is-flex is-flex-wrap-wrap">
        
        {{#each discs as |disc|}}

            <!-- This is the individual tile -->
            <a href="/discs/{{id}}" class="tile is-parent is-3">
            <article class="tile is-child box is-flex is-justify-content-center">
                <!-- Put any content you want -->
                <div class="tile-content">
                <div class="media is-flex is-align-items-center">
                  <figure class="media-left">
                    <img class="image is-128x128" src="./assets/images/{{image}}" alt="picture of disc"/>
                  </figure>
                  <div class="media-content">
                    <h3 class="title is-4">{{discName}}</h3>
                    <p class="subtitle is-6">{{brandName}}</p>
                  </div>
                </div>
                <div class="content">
                    <div class="is-flex is-flex-direction-row">
                        <div class="is-flex is-flex-direction-column p-2">
                            <p>Speed</p>
                            <p>{{speed}}</p>
                        </div>
                        <div class="is-flex is-flex-direction-column p-2">
                            <p>Glide</p>
                            <p>{{glide}}</p>
                        </div>
                        <div class="is-flex is-flex-direction-column p-2">
                            <p>Turn</p>
                            <p>{{turn}}</p>
                        </div>
                        <div class="is-flex is-flex-direction-column p-2">
                            <p>Fade</p>
                            <p>{{fade}}</p>
                        </div>
                    </div>
                </div>
                </div>
            </article>
            </a>
        {{/each}}
    </div>
  </main>
